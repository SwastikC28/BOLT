<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="./css/editprofile.css">
</head>

<body>
    <nav class="nav-bar">
        <img src="./images/logo.png" alt="Profile Picture">
        <h2><a href="/home">HOME</a></h2>
        <h2><a href="/profile">PROFILE</a></h2>

    </nav>


    <h1 style=" font-size: 5em;
    text-align: center;
    color:white;
    margin-bottom: 50px;"> Edit Profile</h1>

    <form action="/edit" method="POST">
        <div class="profile-content">
            <img src="./Uploads/<%=user.imgName%>" alt="Charlie Puth">

            <div class="profile-info">
            <div>
                <input type="text" value="<%=user.firstName%> <%=user.lastName%>">
                <textarea name="" id="" cols="30" rows="10"><%=user.bio%></textarea>
                <hr>
            </div>

            <div class="profile-info-2">
                <table cellspacing="10">
                    <tr>
                        <td>Name </td>
                        <td><input type="text" value="<%=user.firstName%>"></td>
                    </tr>

                    <tr>
                        <td>Age </td>
                        <td><input type="number" value="<%=user.age%>"></td>
                    </tr>

                    <tr>
                        <td>Email</td>
                        <td><input type="email" value="<%=user.username%>" disabled></td>
                    </tr>

                    <tr>
                        <td>Gender</td>
                        <td><input type="text" value="<%=user.gender%>"></td>
                    </tr>                   
                </table>
            </div>

            </div>
        </div>
        <hr style="margin-bottom: 70px;">
        <div class="tech-qual">
        <h1>Technical Qualifications</h1>
        <table cellspacing="10">
            <% for(var i=0;i<user.tQualification.length;i++){ %>
                <tr>
                    <td style="font-size: 1.5em;"><%=i+1%> )</td>
                    <td><input type="text" value="<%=user.tQualification[i]%>"></td>
                </tr>
                <%}%>
        </table>
        </div>
        <div class="tech-interest">
        <h1>Interests</h1>

        <div class="checkboxes">
            <label class="label-box">
                <input type="checkbox" name="frontdevelopment" value="Front-End Develoment">
                <p>Front-End Develoment</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="backdevelopment" value="Back-End Develoment">
                <p>Back-End Develoment</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="javascript" value="JavaScript">
                <p>JavaScript Expert</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="testing" value="Testing">
                <p>Testing</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="node" value="Node.js Developer">
                <p>Node.js Developer</p>
            </label>
            <label class="label-box">
                <input type="checkbox" name="react" value="React">
                <p>React</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="ai" value="AI/ML">
                <p>AI/ML</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="dataScience" value="Data Science">
                <p>Data Science</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="softengineer" value="Software Engineer">
                <p>Software Engineer</p>
            </label>

            <label class="label-box">
                <input type="checkbox" name="flutter" value="Flutter">
                <p>Flutter</p>
            </label>
        </div>
        </div>
        <div class="footer">
        <button type="submit">SAVE</button>

        <!-- <form action="/delete" method="POST">
            <button type="submit">DELETE</button>
            <p>Note: Clicking this button will delete your account permanently</p>
        </form> -->
        </div>
    </form>

</body>
</html>